<!doctype html>
<html>

<head>
  <title>Barista App</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style_barista.css">
</head>

<body>
  <div class="container">
   <img src="img/coffee-log.png" alt="">   
   <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    <div class="page-header text-center">
    
      <h1>Orders</h1>
     
    </div>

    <section class ="order-sec">

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
          <% if (user.local.email) { %>
             <span class = "usr"><span class="fa fa-user"></span><%= user.local.email %></span>
          <% } %>
          <span class = "usr">(Barista)</span>


        </div>
      </div>
      <div class="col-sm-6">
        <h3>Current Orders</h3>
        <input id="completeOrder" type="hidden" value= "<%= user.local.email%>">
        <ul class="messages">
          <% for(var i=0; i< orders.length; i++) {%>
            <% if (user.local.email && orders[i].complete === false) { %>
            <li class="message"> 
              <span class="orderName"><%= orders[i].name %></span>   
              <span class="orderItem"><%= orders[i].order %></span>
              <button class="completeButton"> Complete </button>
            </li>
          
            <% } %>
          <% } %>
        </ul>

    </div>
    <div class="col-sm-6">
      <h3>Completed Orders</h3>
      <input id="completeOrder" type="hidden" value= "<%= user.local.email%>">
      <ul class="messages">
        <% for(var i=0; i< orders.length; i++) {%>
          <% if (orders[i].complete === true) { %>
          <li class="message"> 
            <span class="orderName"><%= orders[i].name %></span>   
            <span class="orderItem"><%= orders[i].order %></span>
            <span class="barista"><%= orders[i].barista %></span>
            <span class="completed">Completed</span>
          </li>
        
          <% } %>
        <% } %>
      </ul>

  </div>
</section>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
